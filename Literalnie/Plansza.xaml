<Window x:Class="Literalnie.Plansza"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Literalnie"
        mc:Ignorable="d"
        Title="Literalnie" Height="800" Width="700" Background="#121212" Foreground="#FFFFFF" ResizeMode="NoResize">

    <Grid x:Name="PlanszaGry" Margin="20, 60, 30, 0">
        <Button Name="Statystyki" Width="35" Height="35" Grid.Column="0" BorderBrush="Transparent" Click="Statystyki_Click" Margin="0,-55,609,744" HorizontalAlignment="Right">
            <Button.Background>
                <ImageBrush ImageSource="statystyki.jpg"/>
            </Button.Background>
        </Button>
        <Button Name="Github" Width="35" Height="35" Grid.Column="0" BorderBrush="Transparent" Click="Github_Click" Margin="46,-55,569,744">
            <Button.Background>
                <ImageBrush ImageSource="github.png"/>
            </Button.Background>
        </Button>
        <Button Name="Ustawienia" Width="35" Height="35" BorderBrush="Transparent" Click="Statystyki_Click" Margin="573,-57,42,746">
            <Button.Background>
                <ImageBrush ImageSource="ustawienia.jpg"/>
            </Button.Background>
        </Button>
        <Button Name="Zasady" Width="35" Height="35" Margin="613,-55,2,744" BorderBrush="Transparent" Click="Zasady_Click" RenderTransformOrigin="2.242,0.517">
            <Button.Background>
                <ImageBrush ImageSource="zasady.jpg"/>
            </Button.Background>
        </Button>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top"  Width="180" FontSize="32px" FontWeight="Bold" FontFamily="sans-serif;" Margin="227,-57,0,0" >LITERALNIE</TextBlock>
    </Grid>
</Window>
