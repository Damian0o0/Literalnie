<Window x:Class="Literalnie.Plansza"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Literalnie"
        mc:Ignorable="d"
        Title="Literalnie" Height="800" Width="700" Background="#121212" Foreground="#FFFFFF" ResizeMode="NoResize">

    <Grid x:Name="PlanszaGry" Margin="50, 80, 50, 0" RenderTransformOrigin="0.503,0.508">
        <Button Name="Statystyki" Width="35" Height="35" Grid.Column="0" BorderBrush="Transparent" Click="Statystyki_Click" Margin="-42,-71,87,740">
            <Button.Background>
                <ImageBrush ImageSource="statystyki.jpg"/>
            </Button.Background>
        </Button>
        <Button Name="Github" Width="35" Height="35" Grid.Column="0" BorderBrush="Transparent" Click="Github_Click" Margin="-2,-71,47,740">
            <Button.Background>
                <ImageBrush ImageSource="github.png"/>
            </Button.Background>
        </Button>
        <Button Name="Ustawienia" Width="35" Height="35" Grid.Column="11" BorderBrush="Transparent" Click="Statystyki_Click" Margin="31,-71,-58,740">
            <Button.Background>
                <ImageBrush ImageSource="ustawienia.jpg"/>
            </Button.Background>
        </Button>
        <Button Name="Zasady" Width="35" Height="35" Grid.Column="11" Margin="71,-71,-98,740" BorderBrush="Transparent" Click="Zasady_Click">
            <Button.Background>
                <ImageBrush ImageSource="zasady.jpg"/>
            </Button.Background>
        </Button>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="4"  Width="180" FontSize="32 px" FontWeight="Bold" FontFamily="sans-serif;" Margin="56,-74,0,0" Grid.ColumnSpan="5">LITERALNIE</TextBlock>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"></ColumnDefinition>
            <ColumnDefinition Width="8"></ColumnDefinition>
            <ColumnDefinition Width="80"></ColumnDefinition>
            <ColumnDefinition Width="8"></ColumnDefinition>
            <ColumnDefinition Width="80"></ColumnDefinition>
            <ColumnDefinition Width="8"></ColumnDefinition>
            <ColumnDefinition Width="80"></ColumnDefinition>
            <ColumnDefinition Width="8"></ColumnDefinition>
            <ColumnDefinition Width="80"></ColumnDefinition>
            <ColumnDefinition Width="8"></ColumnDefinition>
            <ColumnDefinition Width="80"></ColumnDefinition>
            <ColumnDefinition Width="8"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

        </Grid.RowDefinitions>
    </Grid>
</Window>
